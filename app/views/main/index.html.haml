.container-fluid{:class => (signed_in? ? "signed-in" : nil)}
  .row
    .sidebar
      .navbar.navbar-default
        %a{href: root_url}
          = image_tag c("adopt_a_drain_logo"), :alt => c("titles.main"), :title => c("titles.main")
        %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
      .sidebar-content
        -# Corresponds to guideline div below
        %div.hidden-xs
          %h3.text-center
            = t("titles.adopted_tagline", :count => Thing.adopted(current_city).count, :things => t("defaults.things"), :city => c("city.name"))
            .small
              Last updated
              = local_date(Time.now, '%B %e, %Y')
          %a.details{:href => "#details", :"data-toggle" => "modal", :"data-target" => "#details"}
            %button.btn.btn-block.btn-primary#tagline
              = t("defaults.tagline")
        #content
          = render :partial => "layouts/flash", :locals => {:flash => flash}
          - if signed_in?
            = render :partial => "sidebar/search"
          - elsif @reset_password_token.present?
            = render :partial => 'passwords/edit'
          - else
            %iframe{ :width => "100%", :src => "https://www.youtube.com/embed/269AeYt_S9s", :frameborder => "0", :allowfullscreen => "allowfullscreen" }
            = render :partial => "sidebar/search"
        -# Corresponds to guideline div above
        %div.hidden.visible-xs-block
          %a.details{:href => "#details", :"data-toggle" => "modal", :"data-target" => "#details"}
            %button.btn.btn-block.btn-primary#tagline
              = t("defaults.tagline")
        #logos
          .row
            .col-xs-4
              %a{:href => c("sponsors.city_url")}
                = image_tag c("sponsors.city_logo"), :alt => c("sponsors.city"), :title => c("sponsors.city"), :class => "puc"
            .col-xs-4
              %a{:href => c("sponsors.org_url")}
                = image_tag c("sponsors.org_logo"), :alt => c("sponsors.org"), :title => c("sponsors.org"), :class => "dpw"
            .col-xs-4
              %a{:href => c("sponsors.dev_url")}
                = image_tag c("sponsors.dev_logo"), :alt => c("sponsors.dev"), :title => c("sponsors.dev"), :class => "datasf"
    .col-md-9.map-container
      #map
        &nbsp;
      #legend
        .title
          Legend
        .show-hide
          %a#toggleLegend{:href=>"#"}
            Hide
  = render :partial => "sidebar/tos", layout: "layouts/modal", locals: {id: "tos", title: "Volunteer Waiver & Release Of Liability"}
  = render :partial => "sidebar/details", layout: "layouts/modal", locals: {id: "details", title: "What Does it Mean To Adopt a Drain?"}
:javascript
  this.cityConfig = { 
    mapCenterLat: #{c('map_center.lat')}, 
    mapCenterLng: #{c('map_center.lng')} 
  }
  $(function() {
    $('.navbar-toggle').on('click', function(){
      $('div.sidebar').toggleClass('sidebar-full');
    });
  });
